<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkprod_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBege_app">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/motivo_dev_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkProd_cod_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif-condensed-light"
            android:text="65465"
            android:textColor="@color/blue_800"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif-condensed-light"
            android:text=" - "
            android:textColor="@color/colorGrey_app"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/checkProd_descri_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif-condensed-light"
            android:maxLines="1"
            android:text="Construtora KYA para construção civilghfhfghfhgf"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif-condensed-light"
            android:text="QTD: "
            android:textColor="@color/blue_800"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/checkProd_qt_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="7dp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif-condensed-light"
            android:text="15"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="18sp" />
    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorGrey_app"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/checkprod_pend_rad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="3dp"
            android:text="pendencia"
            android:fontFamily="sans-serif-condensed-light"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="18sp"
            android:textSize="18dp"/>
        <RadioButton
            android:id="@+id/checkprod_dev_rad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="3dp"
            android:text="Devolução"
            android:fontFamily="sans-serif-condensed-light"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="18sp"
            android:textSize="18dp"/>
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorGrey_app"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Quatidade pendencia ou devolução"
        android:textColor="@color/blue_800"
        android:textSize="16sp"/>


    <EditText
        android:id="@+id/checkProd_qtpend_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="40dp"
        android:inputType="number"
        android:maxLength="5"
        android:textColor="@color/grey_900"
        android:textSize="16sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Motivo de devolução"
        android:textColor="@color/blue_800"
        android:textSize="16sp"/>

    <Spinner
        android:id="@+id/checkProd_motivo_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorBege_app"
        android:popupBackground="@color/colorBege_app"
        android:textAlignment="center"
        android:entries="@array/motivos_dev_des"/>

    <Button
        android:id="@+id/checkProd_registrar_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/colorGrey_app"
        android:scaleType="fitXY"
        android:text="Registrar"/>
    <Button
        android:id="@+id/checkProd_reset_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/colorGrey_app"
        android:scaleType="fitXY"
        android:text="Restaurar"/>
</LinearLayout>