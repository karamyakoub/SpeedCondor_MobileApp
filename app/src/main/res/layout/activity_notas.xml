<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/notas_layout_master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/notas_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="1dp"
            android:layout_marginBottom="5dp"
            app:tabIndicatorColor="@color/colorOrange_app"
            app:tabIndicatorFullWidth="false">
        </com.google.android.material.tabs.TabLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/notas_finalizar_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="18sp"
                android:background="@drawable/rect_btn_selector"
                android:scaleType="fitXY"
                android:text="@string/notas_button_finalizar_text" />
        </LinearLayout>
        <TextView
            android:id="@+id/notas_count_txtvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeMaxTextSize="20sp"
            android:textColor="@color/white"
            android:paddingRight="12dp"
            android:background="@color/colorGrey_app"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:text="21 encomandas"
            android:fontFamily="sans-serif-condensed-light"/>

        <ListView
            android:id="@+id/notas_listvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="5sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_side_layout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBege_app"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>